  height:60px;
  font-size:16px;
  font-weight: bold
  /* box-shadow: 1px 1px 1px 1px silver */

}


.hovicon {
  background-color:#26086c;
  display:flex;
  justify-content:center;
  align-items:center;
  font-size: 45px;
  line-height: 90px;
  cursor: pointer;
  margin: 20px;
  width: 60%;
  height: 60%;
  border-radius: 50%;
  text-align: center;
  position: relative;
  text-decoration: none;
  z-index: 1;
  color: #fff;
}
