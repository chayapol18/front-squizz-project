.users-type-container {
  @apply flex justify-center items-center flex-col;
}

.users-type-wrap {
  background-color: #f2f2f2;
  @apply flex gap-4 justify-center flex-wrap;
}



.users-type-box{
  background-color:#ab0119;
  @apply mx-2 w-48;
  &:hover {
    @apply cursor-pointer;
  }
}

.teacher{
  width:100%;
  background-color:#d11132;
  height: 190px;
  display:flex;
  justify-content:center;
  align-items:center;
}
.circle-box{
  width:40%


}

